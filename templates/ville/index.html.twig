{% extends 'base.html.twig' %}

{% block title %}Hello VilleController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
     {% for ville in ville %}
                <h1> {{ ville.nom }}</h1>
           
            <ol>
                {% for restaurant in ville.Ville %}
                <li>{{ restaurant.nom }}:{{ restaurant.proprietaire.nom }} {{ restaurant.proprietaire.prenom }} {{ restaurant.adresse }}</li>
                    <a href="{{path('single-restaurant', {id: restaurant.id})}}">
                     <img src="{{ restaurant.image }}" alt="">
                   </a>
                    
                {% endfor %}
            </ol>
        
        {% endfor %}

</div>
{% endblock %}
